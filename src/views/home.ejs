<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="container mt-5">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">List Users</h1>
        <a href="/create-user" class="btn btn-warning">Create New User</a>
      </div>

      <hr />

      <!-- Users Table -->
      <table class="table table-hover table-bordered align-middle">
        <thead class="table-light">
          <tr>
            <th width="60">ID</th>
            <th width="180">Name</th>
            <th width="220">Email</th>
            <th>Address</th>
            <th width="180" class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% users.forEach((user) => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.address %></td>

            <td class="text-center">
              <!-- Delete -->
              <form
                action="/handle-delete-user/<%= user.id %>"
                method="POST"
                class="d-inline"
              >
                <button class="btn btn-danger btn-sm px-3" type="submit">
                  Delete
                </button>
              </form>

              <!-- Update -->
              <form
                action="/handle-view-user/<%= user.id %>"
                method="GET"
                class="d-inline"
              >
                <button class="btn btn-warning btn-sm px-3" type="submit">
                  View
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
